filetype plugin on

" Syntax highlighting
syntax on

" Show line numbers
set number

" Setup tabs and indentation
set tabstop=4
set shiftwidth=4
set noexpandtab
set autoindent
set smartindent

" Display cursor location
set ruler

" Display current filename
:set laststatus=2

" Display line at 80 col
:highlight ColorColumn ctermbg=lightgrey guibg=lightgrey
:set colorcolumn=80

" Make cap W and cap Q work like they obviously should: as their lowercase
" counterparts.
cmap W w
cmap Q q

let g:tex_flavor = "latex"

set rtp+=~/git/powerline/powerline/bindings/vim

